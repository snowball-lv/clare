


FileList["frontends/*"].each do |fdir|
    fname = File.basename(fdir)
    FileList["frontends/#{fname}/bin/*"].each do |entry|
        
        name = File.basename(entry)
        src = File.join("frontends", fname, "bin", name)
        dst = File.join("bin", name)
        
        file(dst => src) do
        puts "#{src} ---> #{dst}"
            FileUtils.copy(src, dst)
        end
        task :default => dst
        
    end
end


task :default
