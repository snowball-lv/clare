

require "fileutils"


task :default do
    sh "rake -f rakefile-flex-bison"
    sh "rake -f rakefile-deps"
    sh "rake -f rakefile-bin"
end

task :clean do
    FileUtils.rm_rf("out")
    FileUtils.rm_rf("bin")
    FileUtils.rm_rf("deps")
    FileUtils.rm_rf("gen")
    FileUtils.rm_rf(Dir["*.exe.stackdump"])
end
