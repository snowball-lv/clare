

require "fileutils"


task :default do
    sh "rake -f rakefile-deps"
    sh "rake -f rakefile-so"
    sh "rake -f rakefile-cli"
    sh "rake -f rakefile-test"
end

task :clean do
    FileUtils.rm_rf("out")
    FileUtils.rm_rf("bin")
    FileUtils.rm_rf("deps")
    FileUtils.rm_rf(Dir["*.exe.stackdump"])
end
